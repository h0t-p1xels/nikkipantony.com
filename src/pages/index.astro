---
import PageLayout from "../components/templates/PageLayout.astro"
import { Icon } from "astro-icon/components"
---

<PageLayout
	title="nikki PANTONY- digital product designer / developer."
	desc="desc"
>
	<main class="main">
		<div class="content-container">
			<h1>
				<span class="plain-text">Nikki</span>
				<span class="gradient-text">PANTONY</span>
			</h1>
			<p class="job">
				<span class="open">//</span>digital product designer <span
					class="slash">/</span
				> developer <sub class="end"> | </sub>
			</p>
			<div class="links-container">
				<p>
					find me <a href="" target="_blank" rel="noopener"
						><span class="social-handle"
							><span class="symbol">@</span>h0t_p1xels</span
						></a
					> on...
				</p>
				<ul class="links">
					<li class="link">
						<a href="" target="_blank" rel="noopener"
							><Icon name="ph:x-logo-bold" /></a
						>
					</li>
					<li class="link">
						<a href="" target="_blank" rel="noopener"
							><Icon name="ph:linkedin-logo-bold" /></a
						>
					</li>
					<li class="link">
						<a href="" target="_blank" rel="noopener"
							><Icon name="ph:mastodon-logo-bold" /></a
						>
					</li>
					<li class="link">
						<a href="" target="_blank" rel="noopener"
							><Icon name="ph:github-logo-bold" /></a
						>
					</li>
					<li class="link">
						<a href="" target="_blank" rel="noopener"
							><Icon name="ph:medium-logo-bold" /></a
						>
					</li>
					<li class="link">
						<a href="" target="_blank" rel="noopener"
							><Icon name="ph:dev-to-logo-bold" /></a
						>
					</li>
				</ul>
			</div>
		</div>
	</main>
</PageLayout>

<style is:global>
	/* main page styling */
	.main {
		display: grid;
		width: 100%;
		height: 100%;
	}

	/* main content container */
	.content-container {
		display: grid;
		padding: 20px 20px 60px;
		margin: auto;
	}

	/* heading styling */
	h1 {
		font-family: var(--heading-font-family);
		font-size: 6.2rem;
		font-weight: 900;
		line-height: 1;
		transform: rotate(359deg);
		margin: 0 0 1rem -1rem;
	}

	h1 span.gradient-text {
		position: relative;
		background: linear-gradient(
			to right,
			var(--brand-s),
			var(--brand-t),
			var(--brand-p)
		);
		-webkit-text-fill-color: transparent;
		-webkit-background-clip: text;
		margin-left: -2.4rem;
	}

	h1 span.gradient-text::before {
		content: "";
		position: absolute;
		z-index: -1;
		background-color: var(--brand-d);
		border-radius: 0.3rem;
		width: 100%;
		height: calc(100% - 1rem);
		padding: 0 0.2rem 0 1rem;
		margin: -0.4rem 0 auto -0.6rem;
	}

	/* job title styling */
	p.job {
		position: relative;
		display: flex;
		align-items: center;
		color: var(--brand-l);
		border-radius: 0.3rem;
		font-size: 1.4rem;
		letter-spacing: 0.05rem;
		margin: 1rem 0 2rem 0.4rem;
		transform: rotate(1deg);
	}

	p.job span.open {
		color: var(--brand-s);
		font-size: 2rem;
		font-weight: 800;
		letter-spacing: -0.2rem;
		margin-right: 0.8rem;
	}

	p.job span.slash {
		color: var(--brand-p);
		font-size: 2rem;
		font-weight: 800;
		margin: 0 0.3rem;
	}

	p.job sub.end {
		font-size: 2rem;
		color: var(--brand-t);
		font-weight: 900;
		margin: 1.4rem 0.8rem -0.4rem;
		transform: rotate(90deg);
	}

	p.job::before {
		content: "";
		position: absolute;
		z-index: -1;
		background-color: var(--brand-d);
		border-radius: 0.3rem;
		width: 102%;
		height: 100%;
		padding: 0 0 0.2rem 0.2rem;
		margin: 0 0 0 -1rem;
	}

	/* links styling */

	.links-container {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		height: min-content;
		width: 100%;
		padding: 0;
		margin: 0 auto 0 -1rem;
		transform: rotate(-1deg);
	}

	.links-container p {
		display: flex;
		flex-wrap: nowrap;
		align-items: center;
		letter-spacing: 0.05rem;
		font-size: 1.3rem;
	}

	.links-container p a {
		padding: 0.1rem 0.3rem;
		margin: auto 1rem;
	}

	.links-container p a::before {
		content: "";
		position: absolute;
		z-index: -1;
		background-color: var(--brand-d);
		border-radius: 0.3rem;
		width: 100%;
		height: 100%;
		padding: 0 0.3rem 0.2rem;
		margin: -0.2rem 0 auto -0.6rem;
	}

	.links-container p span {
		display: flex;
		flex-wrap: nowrap;
		align-items: center;
		font-size: 1.2rem;
	}

	.links-container a,
	.links-container a:any-link,
	.links-container a:link,
	.links-container a:visited,
	.links-container a:active {
		position: relative;
		display: flex;
		flex-wrap: nowrap;
		color: var(--brand-l);
		text-decoration: none;
		font-size: 1.2rem;
	}

	.links-container a:focus-visible {
		outline-offset: 2px;
	}

	span.social-handle span.symbol {
		font-family: Arial, Helvetica, sans-serif;
		font-size: 0.8rem;
		padding: 0;
		margin: 0 0.2rem 0 0;
	}

	ul.links {
		display: flex;
		justify-content: end;
		gap: 1rem;
		list-style-type: none;
		padding: 0;
		margin: 0;
	}

	ul.links li.link {
		display: grid;
		background-color: var(--brand-d);
		border-radius: 0.3rem;
		padding: 0.4rem;
	}

	ul.links li.link a {
		display: grid;
		width: 100%;
		height: 100%;
		padding: 0;
		outline-color: var(--brand-d);
	}

	ul.links li.link a svg {
		width: 1.6rem;
		height: 1.6rem;
		margin: auto;
	}

	a span.social-handle span.symbol,
	a span.social-handle span,
	a span.social-handle,
	ul.links li.link a svg {
		color: var(--brand-l);
		transition: color 0.3s ease-in-out;
	}

	/* hover colors */

	/* @ */
	a:hover span.social-handle span.symbol,
	a:focus span.social-handle span.symbol,
	a:focus-visible span.social-handle span.symbol {
		color: var(--brand-p);
	}

	/* handle */
	a:hover span.social-handle,
	a:focus span.social-handle,
	a:focus-visible span.social-handle {
		color: var(--brand-s);
	}

	/* social links */
	ul.links li.link:nth-of-type(1) a:hover svg,
	ul.links li.link:nth-of-type(1) a:focus svg,
	ul.links li.link:nth-of-type(1) a:focus-visible svg {
		color: var(--brand-t);
	}

	ul.links li.link:nth-of-type(2) a:hover svg,
	ul.links li.link:nth-of-type(2) a:focus svg,
	ul.links li.link:nth-of-type(2) a:focus-visible svg {
		color: var(--brand-p);
	}

	ul.links li.link:nth-of-type(3) a:hover svg,
	ul.links li.link:nth-of-type(3) a:focus svg,
	ul.links li.link:nth-of-type(3) a:focus-visible svg {
		color: var(--brand-s);
	}
	ul.links li.link:nth-of-type(4) a:hover svg,
	ul.links li.link:nth-of-type(4) a:focus svg,
	ul.links li.link:nth-of-type(4) a:focus-visible svg {
		color: var(--brand-t);
	}
	ul.links li.link:nth-of-type(5) a:hover svg,
	ul.links li.link:nth-of-type(5) a:focus svg,
	ul.links li.link:nth-of-type(5) a:focus-visible svg {
		color: var(--brand-p);
	}
	ul.links li.link:nth-of-type(6) a:hover svg,
	ul.links li.link:nth-of-type(6) a:focus svg,
	ul.links li.link:nth-of-type(6) a:focus-visible svg {
		color: var(--brand-s);
	}

	/* footer styling */

	footer {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		display: flex;
		justify-content: center;
		padding: 10px;
	}

	footer p small strong {
		display: flex;
		align-items: center;
	}

	footer p small strong span.symbol {
		font-family: Arial, Helvetica, sans-serif;
		font-size: 1.4em;
		font-weight: 900;
		padding: 0;
		margin: 0 0.3em 0 0;
	}

	/* dark mode styling */

	html[data-theme="dark"] h1 {
		color: var(--brand-l-4);
	}

	html[data-theme="dark"] p {
		color: var(--brand-l-4);
	}

	html[data-theme="dark"] h1 span.gradient-text::before,
	html[data-theme="dark"] p::before,
	html[data-theme="dark"] .links-container p a::before,
	html[data-theme="dark"] li.link {
		background-color: var(--brand-d-12);
	}
</style>
